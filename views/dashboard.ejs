<div class="card shadow-lg rounded-4 p-4">
  <h3 class="mb-2">Hello, <span class="text-primary"><%= user.name %></span>!</h3>
  <p class="text-muted">You are logged in as <strong><%= user.email %></strong>.</p>

  <form method="post" action="/secrets" class="mb-3">
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger"><ul class="mb-0"><% errors.forEach(e=>{ %><li><%= e.msg %></li><% }) %></ul></div>
    <% } %>
    <div class="mb-3"><label class="form-label">Share a secret</label><textarea name="text" class="form-control" rows="3" maxlength="1000" required></textarea></div>
    <button class="btn btn-primary">Post secret</button>
  </form>

  <hr>
  <h5>Your secrets</h5>
  <% if (secrets && secrets.length) { %>
    <ul class="list-group">
      <% secrets.forEach(s=>{ %>
        <li class="list-group-item"><small class="text-muted"><%= new Date(s.createdAt).toLocaleString() %></small><div><%= s.text %></div></li>
      <% }) %>
    </ul>
  <% } else { %>
    <p class="text-muted">You haven't posted any secrets yet.</p>
  <% } %>
</div>
